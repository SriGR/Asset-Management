doctype html
html
  head
    title Add Asset Category
    link(rel='stylesheet', href='/styles/style.css')
  body
    h1 Add Asset Category
    form(action='/assetCategories/add', method='POST')
      div
        label(for='categoryName') Category Name:
        input(type='text', name='categoryName', id='name', required=true)
      div
        button(type='submit').btn.btn-primary Add Category
    a(href='/assetCategories').btn.btn-secondary Go Back
