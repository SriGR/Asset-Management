doctype html
html
  head
    title Asset Management
    link(rel='stylesheet', href='/styles/style.css')
  body
    div.pageParentDiv
        div.sideBarSection
          div.sideBarHeadSec
            | KT Telematic 
          div.sideBarListDiv 
            ul.sidebarListUlstyle
              li: a(href='/').NonActiveList Home
              li: a(href='/assets').NonActiveList Asset
              li: a(href='/assetCategories').NonActiveList Asset Category
              li: a(href='/assetHistory').activeList Asset History
              li: a(href='/employees').NonActiveList Employee
              li: a(href='/assets/issue').NonActiveList Issue Asset
              li: a(href='/assets/return').NonActiveList Return Asset
              li: a(href='/assets/scrap').NonActiveList Scrap Asset
        div.pageRenderSection
          a(href='/assetHistory').BackBtn Back  
          h4 #{asset.assetName} (#{asset.assetNumber})

          if history.length
            table
              thead
                tr
                  th Date
                  th Action
                  th Description
              tbody
                each record in history
                  tr
                    td= new Date(record.date).toLocaleDateString()
                    td= record.action
                    td= record.description
          else
            p No history available for this asset.

