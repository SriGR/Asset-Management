doctype html
html
  head
    title Asset History Viewer
    link(rel='stylesheet', href='/styles/style.css')
  body
    .container
  a(href='/').btn.btn-secondary Back to Home 
  h1 View Asset History
  div.Flex-center
   div
      form(action='/assetHistory/view' method='POST')
        .form-group
          label(for='assetId') Select Asset
          select(name='assetId' required)
            each asset in assets
              option(value=asset.id)= `${asset.assetName} (${asset.assetNumber})`

        button(type='submit' class='btn btn-primary') View History

