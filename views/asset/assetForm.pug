doctype html
html
  head
    title Asset Management
    link(rel='stylesheet', href='/styles/style.css')
  body
    div.pageParentDiv
     div.sideBarSection
      div.sideBarHeadSec
        | KT Telematic 
      div.sideBarListDiv 
       ul.sidebarListUlstyle
        li: a(href='/').NonActiveList Home
        li: a(href='/assets').activeList Asset
        li: a(href='/assetCategories').NonActiveList Asset Category
        li: a(href='/assetHistory').NonActiveList Asset History
        li: a(href='/employees').NonActiveList Employee
        li: a(href='/assets/issue').NonActiveList Issue Asset
        li: a(href='/assets/return').NonActiveList Return Asset
        li: a(href='/assets/scrap').NonActiveList Scrap Asset
     div.pageRenderSection
      div
        div.ViewBtnSet
         a(href='/assets' class="BackBtn") Back
        form(action='/assets/add' method='POST')
          div.form-group
            label(for='assetName') Asset Name
            input(type='text' name='assetName' required)
          div.form-group
            label(for='assetNumber') Asset Number
            input(type='text' name='assetNumber' required)
          div.form-group
            label(for='purchaseAmount') Purchase Amount
            input(type='number' name='purchaseAmount' required)
          div.form-group
            label(for='branchName') Branch Name
            input(type='text' name='branchName' required)
          div.form-group
            label(for='assetCondition') Asset Condition
            select(name='assetCondition')
              option(value='New') New
              option(value='Used') Used
              option(value='Damaged') Damaged
          div.form-group
            label(for='categoryId') Category
            select(name='categoryId' required)
              each category in categories
                option(value=category.id) #{category.categoryName}
          div.form-group
                  button(type='submit' class='ViewHistoryBtn') Add Asset 
